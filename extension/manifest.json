{
  "author": "Daniel Zotti",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Chrome notepad",
    "default_popup": "popup.html",
    "default_icon": {
      "255": "images/chrome-notepad-icon.png"
    }
  },
  "description": "A simple notepad with bold, italic and underline to be used as a Chrome extension",
  "icons": {
    "255": "images/chrome-notepad-icon.png"
  },
  "manifest_version": 2,
  "name": "Chrome Notepad",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "declarativeContent"
  ],
  "version": "1.2"
}
